<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/task_item_padding"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/task_is_done_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </CheckBox>

        <TextView
            android:id="@+id/task_item_name"
            android:layout_width="@dimen/max_text_length"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/task_is_done_checkbox"
            android:singleLine="true"
            style="@style/TextFieldsStyle"/>
        <TextView
            android:id="@+id/task_item_date"
            android:layout_width="@dimen/max_text_length"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_item_name"
            android:layout_toLeftOf="@id/task_icon_imageview"
            style="@style/TextFieldsStyle"/>



    <ImageView
        android:id="@+id/task_icon_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/task_item_padding"
        tools:srcCompat="@drawable/ic_house_foreground">

    </ImageView>
</RelativeLayout>