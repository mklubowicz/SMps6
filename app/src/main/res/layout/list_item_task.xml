<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/task_is_done_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </CheckBox>

        <TextView
            android:id="@+id/task_item_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/task_is_done_checkbox"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/task_item_date"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_item_name"
            android:layout_toLeftOf="@id/task_icon_imageview"/>



    <ImageView
        android:id="@+id/task_icon_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        tools:srcCompat="@drawable/ic_house_foreground">

    </ImageView>
</RelativeLayout>